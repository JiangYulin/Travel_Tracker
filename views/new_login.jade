doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/desktop.css')
        script(src='/javascripts/jquery.js',type='text/javascript' )
        script(type='text/javascript', src='/javascripts/global.js')
        meta(charset='utf-8')
    body
        #container
            div(data-role="notification-rape", id="notification-rape")
                div(data-role="notification",id="notification")
                    h4(id="noti-title")
                    p(id="noti-content")
            #login_page
                #web_login
                    div#login_register
                            a.float-left(onclick="$('#register_form').hide(0,function(){$('#login_form').show()})")
                                div
                                    span 登录
                            a.float-right(onclick="$('#login_form').hide(0,function(){$('#register_form').show()})")
                                div
                                    span 注册
                    hr
                    form#login_form
                        input#request_url(name="request_url", value="#{request_url}", hidden="hidden")
                        input#username(name="username",type="text",placeholder="用户名")
                        input#password(name="password",type="password",placeholder="密码")
                        button.btn(type="submit", id="submit") 登录
                    form.hide(action="/register",method="POST", id="register_form")
                        input(name="username",id="r_username", type="text",placeholder="username")
                        input(name="password", id="r_password", type="password",placeholder="password")
                        input(name="repeat-password", id="re-r_password", type="password", placeholder="repeat password")
                        input(name="email", id="r_email", type="e-mail", placeholder="E-mail")
                        button(class='btn', id="register") Register
                        script(src="/javascripts/md5.js", type="text/javascript" )


    script(src='/javascripts/login.js', type="text/javascript")
    script(src='/javascripts/register.js', type="text/javascript")
